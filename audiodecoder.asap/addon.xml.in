<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.asap"
  version="1.0.0"
  name="ASAP Audio Decoder"
  provider-name="spiff">
  <requires>
    <import addon="kodi.audiodecoder" version="1.0.0"/>
  </requires>
  <extension
    point="kodi.audiodecoder"
    name="asap"
    tags="true"
    tracks="true"
    extension=".sap|.asapstream|.cmc|.cmr|.dmc|.mpt|.mpd|.rmt|.tmc|.tm8|.tm2|.cms|.cm3|.dlt"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">ASAP Audio Decoder</summary>
    <description lang="en">ASAP Audio Decoder</description>
    <platform>@PLATFORM@</platform>
  </extension>
</addon>
